{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ES2022",
      "rootDir": ".",
      "outDir": "dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "skipLibCheck": true,
      "noEmit": true
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }